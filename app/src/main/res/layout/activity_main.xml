<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.lib.jinjunhuang.shadowlayout.MainActivity">

    <com.lib.jinjunhuang.shadowlayoutlibrary.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        app:backgroundColor="#f1f1f1"
        app:layoutRadius="0dp"
        app:shadowColor="#a1a1a1"
        app:shadowDX="0dp"
        app:shadowDY="4dp"
        app:shadowPosition="all"
        app:shadowRadius="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

    </com.lib.jinjunhuang.shadowlayoutlibrary.ShadowLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HAHAHAHAHAHAHAHAHAHAHAHHAHAAHAH" />

    <com.lib.jinjunhuang.shadowlayoutlibrary.ShadowFrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        app:backgroundRadius="8dp"
        app:customBackgroundColor="#f1f1f1"
        app:shadowColor="#a1a1a1"
        app:shadowOffsetY="16dp"
        app:shadowRadius="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

    </com.lib.jinjunhuang.shadowlayoutlibrary.ShadowFrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HAHAHAHAHAHAHAHAHAHAHAHHAHAAHAH" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:elevation="16dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
